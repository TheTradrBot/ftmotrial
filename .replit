entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "pkg-config", "xsimd"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python live_bot.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Live Trading Bot"
author = 50610813
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python live_bot.py"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Analyzer Status"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FTMO Optimizer - Background"

[[workflows.workflow]]
name = "Analyzer Status"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python ftmo_challenge_analyzer.py --status"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "FTMO Optimizer - Background"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python ftmo_challenge_analyzer.py --trials 500"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80
